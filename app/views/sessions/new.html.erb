<div class="row">
  <div class="billboard">
    <img src="http://placehold.it/490x408&text=Fancy+Screenshot+Here">

  </div>

  <div id="register-form" class="span4">
    <%= form_for @user, html: {:class => "well"} do |f| %>
    <form class="well">
      <h2>New to wat.do?</h2>
      <%= f.text_field :email, size:nil, placeholder: "Email" %>
      <%= f.password_field :password, size:nil, placeholder: "Password" %>
      <%= f.password_field :password_confirmation,size:nil, placeholder: "Password Confirmation" %>
      <%= submit_tag "Create Account", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="well" id="reasons">
    <h2>Why join?</h2>
    <ul>
      <li><p>We won't get in your way.</p></li>
      <li><p>Our domain name is awesome.</p></li>
    </ul>
  </div>
</div>