<h1>Tasks</h1><br />
<table class="table table-striped table-bordered">
  <thead>
    <th>Description</th>
    <th></th>
    <th></th>
  </thead>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

