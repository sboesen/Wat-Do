        <div style="font-size: 24px;"><i class="icon-time"></i></div>
      </button>
      <%= f.text_field :date, placeholder: 'Tuesday at 1 pm' %>

      <button id="btn-place" class="btn" type="button" style="margin-right: -6px;">
        <div style="font-size: 24px;"><i class="icon-home"></i></div>
      </button>
      <%= f.text_field :place, placeholder: 'Dog Park' %>

    </div>
    
    
  </div>
<% end %>
