      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="input-append">
      <button id="btn-description" class="btn active" type="button" style="margin-right: -7px;">
